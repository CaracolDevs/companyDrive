        actualId = riesgoSeleccionado

        let prevRisk = document.getElementById(`p-${prevId}`)
        let actualRisk = document.getElementById(`p-${actualId}`)

        let prevDanger = document.getElementById(`r-${prevId}`)
        let actualDanger = document.getElementById(`r-${actualId}`)

        prevRisk.classList.remove("display")
        prevRisk.classList.add("displaynone")

        actualRisk.classList.remove("displaynone")
        actualRisk.classList.add("display")

        prevDanger.classList.remove("display")
        prevDanger.classList.add("displaynone")

        actualDanger.classList.remove("displaynone")
        actualDanger.classList.add("display")

        prevId = actualId
        

      }

      tipoPeligro.addEventListener('change', (e) => {
        onchange()
      })


    </script>
